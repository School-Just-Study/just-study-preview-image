{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["dom", "esnext"],
    "target": "es2019",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
